$require_twitter_script
<span class="twitter-btn">
    <a href="<% if $twitterURL %>$twitterURL<% else_if $twitterUser %>http://twitter.com/$twitterUser<% else_if $SiteConfig.Twitter_UserID %>http://twitter.com/$SiteConfig.Twitter_UserID<% else %>http://twitter.com/mwmdesign<% end_if %>" class="twitter-follow-button" data-show-count="<% if $twitterCount %>true<% else %>false<% end_if %>" <% if $twitterLargeBtn %>data-size="large" <% end_if %>  data-lang="$localeLanguage" data-show-screen-name="<% if $twitterShowUser %>true<% else %>false<% end_if %>" data-align="<% if $twitterAlign %>$twitterAlign<% else %>left<% end_if %>"<% if $twitterWidth %> data-width="$twitterWidth"<% end_if %>><% _t('FOLLOW', 'Follow') %> @<% if $twitterUser %>$twitterUser<% else_if $SiteConfig.Twitter_UserID %>$SiteConfig.Twitter_UserID<% else %>mwmdesign<% end_if %></a>
</span>